
.bdr{
  position: relative;
}
.bdr::after{
  content: '';
  position: absolute;
  right: 0;
  top: 0;
  width: 1rpx;
  height: 100%;
  background-color: #ccc
}

.divider{
  width: 100%;
  height:20rpx;
  box-shadow: 0 10px 10px 0 rgba(0, 0, 0, 0.1) inset
}
.index-enter{
  
}
.rArrow{
  display: flex;
  justify-content: space-between;
  align-items: center
}

.rArrow::after{
  content: '';
  width: 20rpx;
  height: 20rpx;
  border-top: 3rpx solid #ccc;
   border-right: 3rpx solid #ccc;
   transform: rotate(45deg);
}


/*单行省略*/
.ell{
  white-space: nowrap;
  text-overflow: ellipsis;
  overflow: hidden
}




.center{
  
  display: flex;
  justify-content: center;
  align-items: center
}



.cell{
  font-size: 16px;
  background-color:#fff
}
.cell-item{
  border-bottom: 1rpx solid #ddd;
  padding: 20rpx 30rpx
}

page{
  background-color: #f1f1f1
}


.star-after{
  color: #e2e2e2
}
.star-before{
  position: absolute;
  color: #f19e38;
  left: 0;
  top: 0;
  width: 90%;
  overflow: hidden
}